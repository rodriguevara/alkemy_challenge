<p style="color: green"><%= notice %></p>

<h1>Characters</h1>

<div id="characters">
  <% @characters.each do |character| %>
    <%= render character %>
    <br>
    <% if character.image.attached? %>
      <%= image_tag (character.image) %>
  
    <% end %>
    <p>
      <%= link_to "Show this character", character %>
    </p>
  <% end %>
</div>

<%= link_to "New character", new_character_path %>
